</BaseLayout>

<style>
  .hero {
    margin-bottom: 3rem;
  }

  .trust-indicators {
    display: flex;
    gap: 1.5rem;
    margin-top: 1rem;
    font-size: 0.9rem;
    color: var(--muted);
    flex-wrap: wrap;
  }

  .emergency-cta {
    margin: 2rem 0;
  }

  .btn-emergency, .btn-emergency-large {
    background: #dc2626;
    color: white;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: bold;
    text-decoration: none;
    display: inline-block;
    font-size: 1.2rem;
    transition: all 0.2s ease;
    border: 2px solid #dc2626;
  }

  .btn-emergency:hover, .btn-emergency-large:hover {
    background: #b91c1c;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
  }

  .btn-emergency-large {
    font-size: 1.4rem;
    padding: 1.5rem 3rem;
  }

  .response-time {
    margin-top: 1rem;
    font-weight: bold;
    color: var(--brand);
  }

  .what-included, .emergency-problems, .emergency-process, .why-choose-emergency, .coverage-area, .emergency-faq {
    margin: 4rem 0;
  }

  .problem-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .emergency-problem {
    background: #fee2e2;
    border: 2px solid #dc2626;
    border-radius: 12px;
    padding: 1.5rem;
  }

  .danger-critical {
    background: #dc2626;
    color: white;
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: bold;
  }

  .danger-high {
    background: #f59e0b;
    color: white;
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: bold;
  }

  .danger-medium {
    background: #10b981;
    color: white;
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: bold;
  }

  .process-steps {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-top: 2rem;
  }

  .step {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
  }

  .step-number {
    background: var(--brand);
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    flex-shrink: 0;
  }

  .step-number.emergency {
    background: #dc2626;
  }

  .benefit {
    background: var(--card);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid var(--border);
  }

  .coverage-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }

  .coverage-zone {
    background: var(--card);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid var(--border);
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .faq-item {
    background: var(--card);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid var(--border);
  }

  .faq-item h3 {
    color: var(--brand);
    margin-bottom: 1rem;
  }

  .emergency-banner {
    background: linear-gradient(135deg, #dc2626, #b91c1c);
    color: white;
    padding: 3rem 2rem;
    border-radius: 12px;
    text-align: center;
    margin: 4rem 0;
  }

  .guarantee {
    margin-top: 1rem;
    font-weight: bold;
    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    .trust-indicators {
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .problem-grid, .faq-grid {
      grid-template-columns: 1fr;
    }
    
    .step {
      flex-direction: column;
      text-align: center;
    }
    
    .coverage-grid {
      grid-template-columns: 1fr;
    }
  }
</style>