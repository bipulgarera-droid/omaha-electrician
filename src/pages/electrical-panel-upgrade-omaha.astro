  }
  </script>

  <!-- FAQ Schema Markup -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {
        "@type": "Question",
        "name": "How much does a 200 amp panel upgrade cost in Omaha?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Panel upgrade costs typically range from $1,500 to $3,500 depending on your home's specific requirements, permit fees, and any additional electrical work needed."
        }
      },
      {
        "@type": "Question",
        "name": "How long does a panel upgrade take?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Most residential panel upgrades are completed in 4-8 hours. Your power will be temporarily disconnected during installation, typically for 2-4 hours."
        }
      },
      {
        "@type": "Question",
        "name": "Do I need a permit for panel upgrade in Omaha?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Yes, all electrical panel upgrades require permits from the City of Omaha. We handle all permit applications and coordinate the required inspections."
        }
      }
    ]
  }
  </script>
</BaseLayout>

<style>
  .hero {
    margin-bottom: 3rem;
  }

  .cta-group {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .btn-primary, .btn-secondary, .btn-emergency {
    padding: 12px 24px;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.2s;
  }

  .btn-primary {
    background: var(--brand);
    color: white;
  }

  .btn-secondary {
    background: white;
    color: var(--brand);
    border: 2px solid var(--brand);
  }

  .btn-emergency {
    background: #dc2626;
    color: white;
    font-size: 1.1rem;
  }

  .service-overview, .problems-solved, .our-process, .why-choose-us, .service-area, .faq-section {
    margin: 4rem 0;
  }

  .problem-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .problem-item {
    background: var(--card);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid var(--border);
  }

  .process-steps {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-top: 2rem;
  }

  .step {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
  }

  .step-number {
    background: var(--brand);
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    flex-shrink: 0;
  }

  .benefit {
    background: var(--card);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid var(--border);
  }

  .emergency-card {
    background: linear-gradient(135deg, #dc2626, #b91c1c);
    color: white;
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
  }

  .service-areas {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }

  .area-column ul {
    list-style: none;
    padding: 0;
  }

  .area-column li {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--border);
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .faq-item {
    background: var(--card);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid var(--border);
  }

  .faq-item h3 {
    color: var(--brand);
    margin-bottom: 1rem;
  }

  .cta-section {
    margin: 4rem 0;
  }

  .cta-card {
    background: var(--card);
    padding: 3rem 2rem;
    border-radius: 12px;
    text-align: center;
    border: 1px solid var(--border);
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    .cta-group, .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .step {
      flex-direction: column;
      text-align: center;
    }
    
    .faq-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
